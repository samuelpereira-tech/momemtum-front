{
  "openapi": "3.0.0",
  "info": {
    "title": "Scheduled Area API",
    "version": "1.0.0",
    "description": "API for managing scheduled areas (Áreas de Escala) with images, responsible persons, and favorite status"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/scheduled-areas": {
      "post": {
        "summary": "Create a new scheduled area",
        "description": "Creates a new scheduled area with the provided information. The image can be uploaded separately using the image upload endpoint.",
        "operationId": "ScheduledAreaController_create",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateScheduledAreaDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Scheduled area created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduledAreaResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Responsible person not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List all scheduled areas",
        "description": "Retrieves a list of all scheduled areas with pagination support. Can be filtered by favorite status.",
        "operationId": "ScheduledAreaController_findAll",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number (starts at 1)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1,
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Number of items per page (max 100)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10,
              "example": 10
            }
          },
          {
            "name": "favorite",
            "in": "query",
            "required": false,
            "description": "Filter by favorite status",
            "schema": {
              "type": "boolean",
              "example": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of scheduled areas retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedScheduledAreaResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/scheduled-areas/{id}": {
      "get": {
        "summary": "Get scheduled area by ID",
        "description": "Retrieves a specific scheduled area by its ID",
        "operationId": "ScheduledAreaController_findOne",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Scheduled area retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduledAreaResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Scheduled area not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update scheduled area",
        "description": "Updates a scheduled area with the provided information. Only provided fields will be updated.",
        "operationId": "ScheduledAreaController_update",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateScheduledAreaDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Scheduled area updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduledAreaResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Scheduled area not found or responsible person not found"
          },
          "401": {
            "description": "Unauthorized - Authentication required"
          }
        }
      },
      "delete": {
        "summary": "Delete scheduled area",
        "description": "Deletes a scheduled area by its ID",
        "operationId": "ScheduledAreaController_remove",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Scheduled area deleted successfully"
          },
          "404": {
            "description": "Scheduled area not found"
          },
          "401": {
            "description": "Unauthorized - Authentication required"
          }
        }
      }
    },
    "/api/scheduled-areas/{id}/image": {
      "post": {
        "summary": "Upload scheduled area image",
        "description": "Uploads or updates an image for a specific scheduled area. Accepts image files (JPG, PNG, GIF) with a maximum size of 5MB.",
        "operationId": "ScheduledAreaController_uploadImage",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["image"],
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file (JPG, PNG, GIF). Maximum size: 5MB"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ImageUploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid file format or size exceeds 5MB",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Scheduled area not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "413": {
            "description": "Payload too large - File size exceeds 5MB",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete scheduled area image",
        "description": "Removes the image from a specific scheduled area",
        "operationId": "ScheduledAreaController_deleteImage",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Image deleted successfully"
          },
          "404": {
            "description": "Scheduled area not found or image does not exist"
          },
          "401": {
            "description": "Unauthorized - Authentication required"
          }
        }
      }
    },
    "/api/scheduled-areas/{id}/favorite": {
      "patch": {
        "summary": "Toggle favorite status",
        "description": "Toggles the favorite status of a scheduled area",
        "operationId": "ScheduledAreaController_toggleFavorite",
        "tags": ["scheduled-areas"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Scheduled area unique identifier (UUID)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["favorite"],
                "properties": {
                  "favorite": {
                    "type": "boolean",
                    "description": "Favorite status (true to add to favorites, false to remove)",
                    "example": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Favorite status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduledAreaResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Scheduled area not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateScheduledAreaDto": {
        "type": "object",
        "required": [
          "name",
          "responsiblePersonId"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "description": "Name of the scheduled area",
            "example": "Área de Produção"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Description of the scheduled area (optional)",
            "example": "Setor responsável pela produção"
          },
          "responsiblePersonId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the responsible person (must exist)",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "favorite": {
            "type": "boolean",
            "default": false,
            "description": "Whether the area is marked as favorite",
            "example": false
          }
        }
      },
      "UpdateScheduledAreaDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "description": "Name of the scheduled area"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Description of the scheduled area"
          },
          "responsiblePersonId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the responsible person (must exist)"
          },
          "favorite": {
            "type": "boolean",
            "description": "Whether the area is marked as favorite"
          }
        }
      },
      "ScheduledAreaResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "name": {
            "type": "string",
            "example": "Área de Produção"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Setor responsável pela produção"
          },
          "responsiblePersonId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the responsible person",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "responsiblePerson": {
            "type": "object",
            "nullable": true,
            "description": "Responsible person details (populated when requested)",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "fullName": {
                "type": "string",
                "example": "João Silva"
              },
              "email": {
                "type": "string",
                "format": "email",
                "example": "joao.silva@example.com"
              }
            }
          },
          "imageUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "URL to the scheduled area image (null if no image uploaded)",
            "example": "https://example.com/images/area-123e4567-e89b-12d3-a456-426614174000.jpg"
          },
          "favorite": {
            "type": "boolean",
            "description": "Whether the area is marked as favorite",
            "example": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          }
        }
      },
      "ImageUploadResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Image uploaded successfully"
          },
          "imageUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to the uploaded image",
            "example": "https://example.com/images/area-123e4567-e89b-12d3-a456-426614174000.jpg"
          },
          "scheduledAreaId": {
            "type": "string",
            "format": "uuid",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          }
        }
      },
      "PaginatedScheduledAreaResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScheduledAreaResponseDto"
            }
          },
          "meta": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer",
                "example": 1
              },
              "limit": {
                "type": "integer",
                "example": 10
              },
              "total": {
                "type": "integer",
                "example": 50
              },
              "totalPages": {
                "type": "integer",
                "example": 5
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 400
          },
          "message": {
            "type": "string",
            "example": "Invalid input data"
          },
          "error": {
            "type": "string",
            "example": "Bad Request"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of validation error messages",
            "example": [
              "name must be longer than or equal to 3 characters",
              "responsiblePersonId must be a UUID"
            ]
          }
        }
      }
    },
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from authentication endpoint"
      }
    }
  }
}

