  },
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from authentication endpoint"
      }
    },
    "schemas": {
      "CreateGroupDto": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "description": "Name of the group",
            "example": "Equipe de Plantão A"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Description of the group (optional)",
            "example": "Grupo responsável pelo plantão noturno"
          }
        }
      },
      "UpdateGroupDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "description": "Name of the group"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Description of the group"
          }
        }
      },
      "GroupResponseDto": {
        "type": "object",
        "required": ["id", "name", "scheduledAreaId", "membersCount", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the group",
            "example": "abc12345-e89b-12d3-a456-426614174003"
          },
          "name": {
            "type": "string",
            "example": "Equipe de Plantão A"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Grupo responsável pelo plantão noturno"
          },
          "scheduledAreaId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the scheduled area this group belongs to",
            "example": "def67890-e89b-12d3-a456-426614174004"
          },
          "scheduledArea": {
            "$ref": "#/components/schemas/ScheduledAreaDto",
            "description": "Scheduled area information (populated when requested)",
            "nullable": true
          },
          "membersCount": {
            "type": "integer",
            "description": "Number of members in the group",
            "example": 5
          },
          "members": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GroupMemberResponseDto"
            },
            "description": "Array of group members (populated when requested)"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          }
        }
      },
      "CreateGroupMemberDto": {
        "type": "object",
        "required": ["personId", "responsibilityIds"],
        "properties": {
          "personId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the person to add to the group (must be associated with the scheduled area)",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "responsibilityIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "minItems": 1,
            "description": "Array of responsibility IDs (must belong to the scheduled area, at least one required)",
            "example": [
              "456e7890-e89b-12d3-a456-426614174001",
              "789e0123-e89b-12d3-a456-426614174002"
            ]
          }
        }
      },
      "UpdateGroupMemberDto": {
        "type": "object",
        "required": ["responsibilityIds"],
        "properties": {
          "responsibilityIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "minItems": 1,
            "description": "Array of responsibility IDs (must belong to the scheduled area, at least one required)",
            "example": [
              "456e7890-e89b-12d3-a456-426614174001",
              "012e3456-e89b-12d3-a456-426614174005"
            ]
          }
        }
      },
      "GroupMemberResponseDto": {
        "type": "object",
        "required": ["id", "personId", "groupId", "responsibilities", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the group member association",
            "example": "xyz98765-e89b-12d3-a456-426614174005"
          },
          "personId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the associated person",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "person": {
            "$ref": "#/components/schemas/PersonInfoDto",
            "description": "Person information (populated when requested)",
            "nullable": true
          },
          "groupId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the group",
            "example": "abc12345-e89b-12d3-a456-426614174003"
          },
          "group": {
            "$ref": "#/components/schemas/GroupInfoDto",
            "description": "Group information (populated when requested)",
            "nullable": true
          },
          "responsibilities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ResponsibilityInfoDto"
            },
            "description": "Array of responsibilities assigned to the person in this group"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2024-01-15T10:30:00.000Z"
          }
        }
      },
      "PersonInfoDto": {
        "type": "object",
        "required": ["id", "fullName", "email", "photoUrl"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "fullName": {
            "type": "string",
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "joao.silva@example.com"
          },
          "photoUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "URL to the person's photo",
            "example": "https://example.com/photos/person-123e4567-e89b-12d3-a456-426614174000.jpg"
          }
        }
      },
      "GroupInfoDto": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "abc12345-e89b-12d3-a456-426614174003"
          },
          "name": {
            "type": "string",
            "example": "Equipe de Plantão A"
          }
        }
      },
      "ScheduledAreaDto": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "def67890-e89b-12d3-a456-426614174004"
          },
          "name": {
            "type": "string",
            "example": "Área de Produção"
          }
        }
      },
      "ResponsibilityInfoDto": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "456e7890-e89b-12d3-a456-426614174001"
          },
          "name": {
            "type": "string",
            "example": "Líder"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Lidera a equipe"
          },
          "imageUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "URL to the responsibility image",
            "example": "https://example.com/images/responsibility-456e7890-e89b-12d3-a456-426614174001.jpg"
          }
        }
      },
      "PaginatedGroupResponseDto": {
        "type": "object",
        "required": ["data", "meta"],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GroupResponseDto"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMetaDto"
          }
        }
      },
      "PaginatedGroupMemberResponseDto": {
        "type": "object",
        "required": ["data", "meta"],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GroupMemberResponseDto"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMetaDto"
          }
        }
      },
      "PaginationMetaDto": {
        "type": "object",
        "required": ["page", "limit", "total", "totalPages"],
        "properties": {
          "page": {
            "type": "integer",
            "example": 1
          },
          "limit": {
            "type": "integer",
            "example": 10
          },
          "total": {
            "type": "integer",
            "example": 15
          },
          "totalPages": {
            "type": "integer",
            "example": 2
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 400
          },
          "message": {
            "type": "string",
            "example": "Invalid input data"
          },
          "error": {
            "type": "string",
            "example": "Bad Request"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of validation error messages",
            "example": [
              "name must be longer than or equal to 3 characters",
              "personId must be a UUID"
            ]
          }
        }
      }
    }
  }
}
















