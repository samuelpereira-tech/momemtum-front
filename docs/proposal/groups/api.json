            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Scheduled area unique identifier"
          },
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Group unique identifier"
          }
